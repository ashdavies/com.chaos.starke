<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Theme.Starke" parent="Theme.AppCompat.Light">
    <item name="android:actionMenuTextColor">@android:color/white</item>
    <item name="android:actionBarStyle">@style/Theme.Starke.ActionBar</item>
    <item name="android:windowActionBarOverlay">false</item>

    <item name="floatingActionButtonStyle">@style/Theme.Starke.Fab</item>
  </style>

  <style name="Theme.Starke.ActionBar">
    <item name="android:background">@color/primary</item>
    <item name="android:height">@dimen/action_bar_height</item>
    <item name="android:icon">@android:color/transparent</item>
    <item name="android:titleTextStyle">@style/Theme.Starke.ActionBar.TitleText</item>
  </style>

  <style name="Theme.Starke.ActionBar.TitleText">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="Theme.Starke.Fab" parent="FloatingActionButton">
    <item name="floatingActionButtonColor">@color/accent</item>
  </style>

</resources>