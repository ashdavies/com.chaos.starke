<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.chaos.starke">

  <application
    android:allowBackup="true"
    android:icon="@drawable/ic_launcher_square"
    android:label="@string/application"
    android:name="com.orm.SugarApp"
    android:theme="@style/Theme.Starke"
    tools:replace="android:icon,android:label">

    <meta-data
      android:name="DATABASE"
      android:value="starke.db" />
    <meta-data
      android:name="VERSION"
      android:value="1" />
    <meta-data
      android:name="QUERY_LOG"
      android:value="true" />
    <meta-data
      android:name="DOMAIN_PACKAGE_NAME"
      android:value="com.chaos.starke" />

    <meta-data
      android:name="com.google.android.gms.version"
      android:value="@integer/google_play_services_version" />

    <activity
      android:name=".core.MainActivity"
      android:label="@string/application">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".core.RoutineActivity"
      android:label="@string/application"
      android:parentActivityName=".core.MainActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".core.MainActivity" />
    </activity>

    <activity
      android:name=".core.ActivitiesActivity"
      android:label="@string/activity_activities"
      android:parentActivityName=".core.MainActivity">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value=".core.MainActivity" />
    </activity>

  </application>

</manifest>
